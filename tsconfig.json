{
  "compilerOptions": {                            
    "lib": ["esnext"],                                   
    "module": "commonjs",                                
    "rootDir": "src",                                    
    "resolveJsonModule": true,                           
    "allowJs": true,                                     
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true,
    "sourceMap": true,                           
  }
}
